+
+static uint32_t
+pe_read_u32(const unsigned char *p)
+{
+  return (uint32_t)p[0] | ((uint32_t)p[1] << 8) | ((uint32_t)p[2] << 16)
+         | ((uint32_t)p[3] << 24);
+}
+
+static uint16_t
+pe_read_u16(const unsigned char *p)
+{
+  return (uint16_t)p[0] | ((uint16_t)p[1] << 8);
+}
+
+GC_INNER void
+GC_init_midipix_data_bounds(void)
+{
+  void *base;
+  struct pe_raw_coff_image_hdr *coff;
+  struct pe_raw_sec_hdr *sec;
+  uint16_t num_sections, i;
+  ptr_t lowest = NULL;
+  ptr_t highest = NULL;
+
+  base = pe_get_first_module_handle();
+  coff = pe_get_image_coff_hdr_addr(base);
+  sec = pe_get_image_section_tbl_addr(base);
+
+  num_sections = pe_read_u16(coff->cfh_num_of_sections);
+
+  for (i = 0; i < num_sections; i++, sec++) {
+    uint32_t chars = pe_read_u32(sec->sh_characteristics);
+
+    if ((chars & (PE_IMAGE_SCN_CNT_INITIALIZED_DATA | PE_IMAGE_SCN_CNT_UNINITIALIZED_DATA)) && (chars & PE_IMAGE_SCN_MEM_WRITE)) {
+      uint32_t rva = pe_read_u32(sec->sh_virtual_addr);
+      uint32_t size = pe_read_u32(sec->sh_virtual_size);
+      ptr_t sec_start = (ptr_t)((char *)base + rva);
+      ptr_t sec_end = sec_start + size;
+
+      if (lowest == NULL || sec_start < lowest) {
+        lowest = sec_start;
+      }
+      if (highest == NULL || highest < sec_end) {
+        highest = sec_end;
+      }
+    }
+  }
+
+  GC_data_start = lowest;
+  GC_data_end = highest;
+
+# ifdef DEBUG_ADD_DEL_ROOTS
+  GC_log_printf("bounds: %p - %p\n", (void *)GC_data_start, (void *)GC_data_end);
+# endif
+}
+#endif /* SEARCH_FOR_MIDIPIX_DATA_BOUNDS */
